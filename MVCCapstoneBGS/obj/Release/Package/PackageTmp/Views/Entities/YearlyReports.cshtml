    function LoadYearDDL() {
        var temp = $(".YearDDL").empty();
        temp.append($("<option>Select Year</option>"));
        $.ajax({
            type: "GET",
            url: "/DataGet/GetYear",
            dataType: "json",
            success: function (response) {
                $.each(response, function () {

                    temp.append($("<option></option>").val(this['Description']).html(this['Description']));
                });
            }
        })
    };

